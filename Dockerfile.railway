# Railway-optimized Dockerfile
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy root package.json
COPY package.json ./

# Install dependencies for PORT directory
WORKDIR /app/PORT
COPY PORT/package*.json ./
RUN npm ci

# Copy source code
COPY PORT/ .

# Build the application
RUN npm run build

# Expose port
EXPOSE 3000

# Start the application
CMD ["npm", "run", "preview"]
